{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",

    "strict": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "resolveJsonModule": true,

    "strictPropertyInitialization": false
  }
}
